{
    "compilerOptions": {
        "target": "es2024",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./bin",
        "baseUrl": ".",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "bin", "defaults", "assets", "examples", "templates"]
}
